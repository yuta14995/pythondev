     "text": [
      "4人のテストの平均点は 85.0 点です。\n"
     ]
    }
   ],
   "source": [
    "total = 0\n",
    "count = 0\n",
    "\n",
    "while True:\n",
    "    score = int(input(\"点数を入力してください：\"))\n",
    "    if score == -1:\n",
    "        break\n",
    "    total += score\n",
    "    count += 1\n",
    "\n",
    "\n",
    "if count > 0:\n",
    "    average = round(total / count, 1)\n",
    "    print(f\"{count}人のテストの平均点は {average} 点です。\")\n",
    "else:\n",
    "    print(\"点数が入力されませんでした。エラーです。\")\n"
   ]
  }
 ],
